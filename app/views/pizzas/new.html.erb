<h1>Make a Pizza</h1>

<ul>
    <% if flash[:errors] %>
        <% flash[:errors].each do |err_mess| %>
            <li>
                <%= err_mess %>
            </li>    
        <% end %>
    <% end %>
</ul>


<%= form_for @pizza do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :ingredients %>
    <%= f.text_field :ingredients%>
    <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
    <%= f.submit %>
 <% end %>   