<h1>Create New Pizza </h1>

<%= form_for @pizza do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>
  <%= f.label :restaurant %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>
  <%= f.submit %>
<% end %>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p> <%= error %> </p>
  <% end %>
<% end %>