
<% if flash[:errors]%>
  <% flash[:errors].each do |error| %>
    <p>YO! <%= error %></p>
  <% end %>
<% end %>

<%= form_for @pizza do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :ingredients%>
<%= f.text_field :ingredients %>
<%= f.label "Restaurant"%>
<%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
<%= f.submit %>
<% end %>
