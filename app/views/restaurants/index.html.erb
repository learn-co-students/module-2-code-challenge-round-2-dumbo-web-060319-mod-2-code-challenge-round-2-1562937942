<h1 style='margin-top:100px;font-size:2rem'>Our official restaurant directory</h1>



<h3>Search For a Restaurant</h3>

<%= form_tag("/restaurants", method: "get") do %>
  <%= label_tag(:name, "Search for:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
<% end %>

<%= form_tag(restaurants_path, method: :get) do %>
  Store 
<%= text_field_tag :name, params[:name] %>
  
<%= submit_tag 'Search' %>
<% end %>


<% @restaurants.each do |restaurant| %>
  <h1 style='font-size:1.5rem;margin-top:50px'>Restaurant Name:
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
  </h1>
  <p>Address: <%= restaurant.address %></p>
<% end %>
