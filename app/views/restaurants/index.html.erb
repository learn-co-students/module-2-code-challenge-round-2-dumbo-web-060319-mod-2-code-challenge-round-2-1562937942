<h1 style='margin-top:100px;font-size:2rem'>Our official restaurant directory</h1>


<%= form_tag(@restaurant_search, method: :get) do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
  <% if @restaurant_search.present? %>
  <%= render restaurant_path %>
<% else %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>
<% end %>



<% @restaurants.each do |restaurant| %>
  <h1 style='font-size:1.5rem;margin-top:50px'>Restaurant Name:
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
  </h1>
  <p>Address: <%= restaurant.address %></p>
<% end %>
